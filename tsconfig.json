{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "outDir": "./build",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts", "src/__tests__/quickSortStrArray.test.ts",
  ]
}